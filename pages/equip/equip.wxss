/* pages/equip/equip.wxss */
.port{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  margin-top: 100rpx;
  height: 200rpx;
  width: 90%;
  /* border: 1rpx solid #dcdcdc; */
}
.port image{
  height: 180rpx;
  margin-left: 65rpx;
}
.port text{
  height: 80rpx;
  width: 220rpx;
  /* border: 1rpx solid #dcdcdc; */
  color: #dcdcdc;
  font-size: 30rpx;
  margin-right: 150rpx;
}
/* 我的设备 */
.my{
  margin: auto;
  margin-top: 100rpx;
  height: 390rpx;
  width: 90%;
  border-radius: 20rpx;
  border: 1rpx solid #dcdcdc;
  background: #fff;
}
.myintro{
  width: 90%;
  margin:15rpx auto;
  height: 180rpx;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn{
  width: 90%;
  margin:10rpx auto;
  height: 80rpx;
  /* border: 1rpx solid #dcdcdc; */
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.btn .auto,.unbund{
  height: 60rpx;
  width: 150rpx;
  text-align: center;
  border-radius:10rpx;
  line-height: 60rpx; 
  background: #f8801d;
  color: #fff;
}
/* 解绑 */
.unbund.untie{
  background: #999999;
}
.myintro .detail{
  height: 140rpx;
  width: 400rpx;
  border-left: 1rpx solid #dcdcdc;
  font-size: 30rpx;
}
.myintro .detail view{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.myintro .detail .light{
  height: 50rpx;
  width: 50rpx;
}
.model{
  margin-left: 30rpx;
}
.electric{
  margin-left: 70rpx;
}
.myintro image{
  height: 150rpx;
  width: 150rpx;
}
/* 添加设备 */
.add{
  width: 350rpx;
  margin-top: 30rpx;
}
.guide{
  height: 180rpx;
  width: 80%;
  border: 1rpx solid #dcdcdc;
  border-radius: 20rpx;
  margin: auto;
  font-size: 30rpx;
  margin-top: 30rpx;
  padding: 30rpx;
}
.guide .num{
  margin-left: 70rpx;
}