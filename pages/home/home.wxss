.inforcont cover-image{
  height: 50rpx;
  width: 50rpx;
}
.inforcont .name{
  font-size: 24rpx;
  margin-left: 30rpx;
}
.infor .inforcom{
  width: 180rpx;
  margin: auto;
  text-align: center;
  padding: 10rpx 0rpx;
  font-size: 24rpx;
  display: flex;
}
/* 电子围栏 */
.fence{
  height: 40rpx;
  width: 150rpx;
  border-radius: 50rpx;
  border: 1rpx solid #8f8c8c;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  align-items: center;
  background: #fff;
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  padding: 10rpx;
  box-shadow: 10rpx 10rpx 25rpx #8f8c8c;
}
.fence cover-image{
  height: 50rpx;
  width: 50rpx;
}
/* 轨迹追踪 */
.track{
  height: 40rpx;
  width: 150rpx;
  border-radius: 50rpx;
  border: 1rpx solid #8f8c8c;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  align-items: center;
  background: #fff;
  position: absolute;
  top: 120rpx;
  right: 20rpx;
  padding: 10rpx;
  box-shadow: 10rpx 10rpx 25rpx #8f8c8c;
}
.track cover-image{
  height: 50rpx;
  width: 50rpx;
}
