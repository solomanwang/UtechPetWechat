#map{
  z-index: -100;
  position: absolute;
  top: 0rpx;
}
/* 首页宠物信息 */
.infor{
  width: 200rpx;
  border: 1rpx solid #8f8c8c;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  box-shadow: 10rpx 10rpx 25rpx #8f8c8c;
  background: #fff;
}
.infor .not{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* border: 1rpx solid #8f8c8c; */
  font-size: 25rpx; 
  background: #fff;
  text-align: center;
}
.inforcont{
  height: 80rpx;
  width: 180rpx;
  margin: auto;
  display: flex;
  justify-content: start;
  align-items: center;
}
.bor{
  width: 180rpx;
  margin: auto;
  border: 0.5rpx solid #DBDBDB;
}
